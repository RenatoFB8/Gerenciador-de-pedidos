<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('./partials/head') %>
    <title>PEDIDOS</title>
</head>
<body>
    <header class="conteiners">
        <%- include('./partials/header') %>
    </header>
    <section class="conteiners pageHeader">
        <h1>pedidos</h1>
        <button>adicionar</button>
    </section>

    <section class="conteiners pedidos">
        <% pedidos.forEach(pedido => { %>
         <div class="pedido">
            <h1><%= pedido.cliente %></h1>
            <h4><%= pedido.data %></h4>
            <h4>produtos</h4>
            <div class="listaProdutos">
                <ul>
                    <% for(let i in pedido.produtos) { %>
                        <li><%= i %>: <%= pedido.produtos[i] %></li>
                    <% } %>
                </ul>
            </div>

            <p id="telefone"><%= pedido.telefone %></p>

            <div>
                <img src="/src/lapis.png" alt="editar" nome="">
                
                <form action="/pedidos/edit" method="post" nome="" class="prodLarg">
                    <h3>editar</h3>
                    <section class="editar-produto">
                    <input type="hidden" name="nomeAntigo" value="">
                    <input type="text" name="nomeNovo" placeholder="novo nome">
                    <div class="selecionarProdutos">
                        <div>
                            <p>bolo de chocolate</p>
                            <div>
                                <input type="number" name="bolo">
                                <p>R$4,50</p>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="lucroAntigo" value="">
                    <input type="text" name="lucroNovo" placeholder="novo lucro">
                    
                    <input type="submit" value="editar">
                </section>
                </form>

                <p id="valor"> R$ </p>
            

                <img src="/src/lixo.png" alt="deletar" nome="">
                <form action="/pedidos/delete" method="post" nome="">
                    <h3>Deseja mesmo apagar?</h3>
                    <input type="submit" value="sim">
                    <input type="hidden" name="nome" value="">
                    <button>n√£o</button>
                   
                </form>
            </div>


        </div>
        <% }) %>
        


    </section>

    

    <div class="opacidade"></div>
    
    <section class="addConteudo prodLarg">
        <h2>adicionar pedido</h2>
        <form action="/pedidos/add" method="post" class="add" id="add-pedido">
            <input type="text" name="cliente" placeholder="cliente">
            <input type="text" placeholder="telefone" name="telefone">
            <input type="date" name="data">
            <div class="selecionarProdutos">
                <div>
                    <p>bolo</p>
                    <div>
                        <input type="number" name="bolo">
                        <p>4</p>
                    </div>
                </div>         
            </div>
            <input type="submit" value="adicionar">
            <p id="valorPedido">Valor:</p>
        </form>
        
        </section>
        
    <script src="/script.js"></script>
</body>

</html>